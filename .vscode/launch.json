  "version": "0.2.0",
  "configurations": [
    {
      "name": "Dispatcher",
      "type": "node",
      "request": "attach",
      "address": "dispatcher",
      "port": 9229,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "outFiles": [
        "${workspaceFolder}/**/*.js",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Ping Listener",
      "type": "node",
      "request": "attach",
      "address": "ping-listener",
      "port": 9229,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "outFiles": [
        "${workspaceFolder}/**/*.js",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Public Web",
      "type": "node",
      "request": "attach",
      "address": "public-web",
      "port": 9229,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "outFiles": [
        "${workspaceFolder}/**/*.js",
        "!**/node_modules/**"
      ]
    }
  ]
}
